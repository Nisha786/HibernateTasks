<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.hibernateMapping.Customer" table="customer"> <!-- Customer.hbm.xml tells 
	    hibernate to map Customer.class with customer 
        table in the db -->

		<id name="Cid" column="Cid" /> <!-- id column tells the which column needs to be marked as primary key -->
		<property name="Cname" column="Cname" length="10" />

		<property name="vendorId" column="vendorId" insert="false" />

	</class>
</hibernate-mapping>